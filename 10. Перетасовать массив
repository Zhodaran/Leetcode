func shuffle(nums []int, n int) []int {
    result := make([]int, 2*n) // Создаем новый массив длиной 2n

    // Перемешиваем элементы
    for i := 0; i < n; i++ {
        result[2*i] = nums[i]     // Добавляем элемент из первой половины
        result[2*i+1] = nums[i+n] // Добавляем соответствующий элемент из второй половины
    }

    return result // Возвращаем перемешанный массив
}
