func numberOfMatches(n int) int {
    matches := 0 // Счетчик сыгранных матчей

    // Пока не останется одна команда
    for n > 1 {
        if n%2 == 0 {
            // Если количество команд четное
            matches += n / 2
            n = n / 2 // Половина команд проходит дальше
        } else {
            // Если количество команд нечетное
            matches += (n - 1) / 2
            n = (n - 1) / 2 + 1 // Одна команда проходит дальше, остальные делятся пополам
        }
    }

    return matches
}
